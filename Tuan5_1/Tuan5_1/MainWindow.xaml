<Window x:Class="Tuan5_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuan5_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MouseMove="Window_MouseMove">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF759ABF" Offset="0"/>
            <GradientStop Color="#FFF7FAFD" Offset="0.5"/>
            <GradientStop Color="#FF759ABF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Background="#FFFBF8F8">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="45,48,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE3EE03" Offset="0"/>
                    <GradientStop Color="#FF759ABF" Offset="0.5"/>
                    <GradientStop Color="#FFEE1313" Offset="0.997"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Calendar HorizontalAlignment="Left" Margin="46,99,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
